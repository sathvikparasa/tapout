# WarnABrotha Environment Configuration
# Copy this file to .env and fill in the values

# Application settings
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres.<project-ref>:<password>@aws-0-<region>.pooler.supabase.com:5432/postgres
DATABASE_URL_SYNC=postgresql://postgres:<password>@db.<project-ref>.supabase.co:5432/postgres

# UC Davis email domain (don't change unless testing)
UCD_EMAIL_DOMAIN=ucdavis.edu

# Token expiration (hours)
ACCESS_TOKEN_EXPIRE_HOURS=168

# Parking reminder (hours before sending)
PARKING_REMINDER_HOURS=3

# APNs Push Notification Configuration (optional)
# Leave blank to disable push notifications (polling will still work)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=
APNS_BUNDLE_ID=
APNS_USE_SANDBOX=true
