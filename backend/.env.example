# WarnABrotha Environment Configuration
# Copy this file to .env and fill in the values

# Application settings
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production

# Database (Cloud SQL PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:<password>@/<database>?host=/cloudsql/<connection-name>
DATABASE_URL_SYNC=postgresql://postgres:<password>@/<database>?host=/cloudsql/<connection-name>

# UC Davis email domain (don't change unless testing)
UCD_EMAIL_DOMAIN=ucdavis.edu

# Token expiration (hours)
ACCESS_TOKEN_EXPIRE_HOURS=168

# Parking reminder (hours before sending)
PARKING_REMINDER_HOURS=3

# APNs Push Notification Configuration (optional)
# Leave blank to disable push notifications (polling will still work)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=
APNS_BUNDLE_ID=
APNS_USE_SANDBOX=true
